<% user = User.find(params[:id])%>

<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="card-panel grey lighten-5 z-depth-1">
    <div class="row valign-wrapper">

      <div class="col s2">
        <%=image_tag(user.avatar_img, class:"circle responsive-img")%> 
      </div>

      <div class="col s10">
        <span class="black-text">
          <p><%= user.username %></p>
          <p><%= user.birthday%></p>
          <%if current_user != user && (not Friendship.exist?(current_user,user)) %>
            <%=link_to "Add Friend", friendships_path(friend_id: user.id),:method=>:post,data: { confirm: "Are you sure?" } %>
          <%end%>
        </span>
      </div>

    </div>
  </div>
</div>

<div class="friends">
  <%= link_to 'Friends', friend_path(user.id)%>
</div>
  
<div class="events">
  <%= link_to 'Events', user_event_path(user.id) %>
</div>

<div class ="wishlist_link">
  <h5><%= link_to "My Wishlist", wishlists_path %></h5>
</div>

