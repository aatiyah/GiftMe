<% if not current_user.nil? %>
	<% 	if params[:id] %>
		<% 	id = params[:id].to_i %>
	<% 	else %>
		<% 	id = current_user.id %>
	<% end %>

	<ul class="collapsible collapsible-accordion ">
		<li><%= link_to 'My Friends', friend_path(current_user.id)%></li>

		<li>
			<a class="collapsible-header">Products <i class="material-icons">redeem</i></a>
			<div class="collapsible-body orange">
				<ul>
					<li> <%= link_to 'All Products', products_path %> </li>
					<li> <%= link_to 'Electronics', category_path(category: "electronics") %> </li>
					<li> <%= link_to 'Clothing', category_path(category: "clothing") %> </li>
					<li> <%= link_to 'Toys', category_path(category: "toys") %> </li>
				</ul>
			</div>
		</li>
	</ul>

	<li><%= link_to 'My Events', user_event_path(current_user.id) %></li>
	<li><%= link_to "My Wishlist", user_wishlist_path(current_user.id) %></li>

	<div class="hide-on-large-only">
		<%= render 'topnavlinks' %>
	</div>
<% end %>


