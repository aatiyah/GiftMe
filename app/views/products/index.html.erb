<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="template">
	<div class="row" id="template-container">
		<div class="col s12 m3 l3 orange white-text" id="left-section"> 
	  	</div>	

		<div class="col s12 m9 l9" id="main-section"> 
			<div class="products-display">
				<%= render 'form' %>
				<div class="row">
					<% @products.each do |p| %>
						<div class="col s12 m6 l4 center">
							<div class="card">
								<div class="card-image">
									<img src="<%=p.img_url%>">
								</div>
								<div class="card-action">
									<%=link_to p.title, product_path(p.category.slug, p.id)%>
								</div>
								<div class="card-content">
									<p>Price: $<%=p.price%></p>
									<p><%=link_to "Add to my Wishlist", addtowishlist_path(p.id)%></p>
								</div>
								</div>
							</div>
						</div>
					<% end %>
				</div>

				<%=will_paginate @products, class: "center" %>
			</div>
		</div>
	</div>
</div>	