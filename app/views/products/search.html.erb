<div class="template">
	<div class="row">
		<div class="leftpanel">
			<div class="col s12 m3 l3 orange white-text">
				<%= render 'form' %>
  			</div>	
		</div>

		<div class="mainpanel">
			<div class="col s12 m9 l9"> 
				<div class="products-display">
					<div class="row">
						
						
						<% @products.each do |p| %>
							<div class="col s12 m6 l4 center">
								<div class="card">
									<div class="card-image">
										<img src="<%=p.img_url%>">
									</div>
									<div class="card-action">
										<%=link_to p.title, product_path(p.category.slug, p.id)%>
									</div>
									<div class="card-content">
										<p>Price: $<%=p.price%></p>
									</div>
								</div>
							</div>
						<% end %>
					</div>

					<%=will_paginate @products, class: "center" %>
				</div>
			</div>
		</div>  
	</div>
</div>	