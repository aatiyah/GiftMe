<div class="row">
    <div class="col s12 m5">
        <div class="card-panel white">
            <span class="black-text">

                <p>
                    <strong>Title:</strong>
                    <%= @wishlist.title %>
                </p>

                <p>
                    <strong>Price:</strong>
                    <%= @wishlist.price %>
                </p>

                <p>
                    <strong>Info:</strong>
                    <%= @wishlist.info %>
                </p>


                <% if @wishlist.user == current_user %>
                    <%= link_to 'Edit', edit_wishlist_path(@wishlist), class: "waves-effect light-blue lighten-1 btn" %> |
                    <%= link_to 'Back', user_wishlist_path(current_user.id) , class: "waves-effect light-blue lighten-1 btn" %>
                <% end %>

			</span>
		</div>
	</div>
</div>
