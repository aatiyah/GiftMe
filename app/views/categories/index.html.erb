<div class="container">
	<div class="row">
		<% @products.each do |p|%>
			<div class="thumbnail col s12 m4 l3">
				<img src="<%=p.img_url%>">
				<p><%=link_to p.title, product_path(p.category.slug, p.id)%></p>
				<p><%=p.price%></p>
			</div>
		<% end %>

	</div>
</div>

<%=will_paginate @products  %>
