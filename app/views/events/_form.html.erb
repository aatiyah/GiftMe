<div class="row">
  <div class="col s12 m5">
    <div class="card-panel white">
      <span class="black-text">
        <div class="event_form">
          <%= form_for(@event) do |f| %>
            <% if @event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

                <ul>
                <% @event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :title %><br>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.label :date %><br>
              <%= f.date_field :date, class: "datepicker" %>
            </div>
            <div class="field">
              <%= f.check_box :annual %>
              <%= f.label :annual %><br>
            </div>
            <div class="field">
              <%= f.label :notes %><br>
              <%= f.text_area :notes %>
            </div>
            <div>
              <%= f.hidden_field :user_id, value: current_user.id %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>
        </div>
      </span>
    </div>
  </div>
</div>