<div class="eventshow">
	<h2 class="header center orange-text">Events</h2>
	<p id="notice" class="orange-text"><%= notice %></p>

	<div class="row">
		<div class="col s12 m6 l6">
			<div class="card center">
				<div class="card-content">
					<div class="card-title orange-text">Title: <%= @event.title%></div>
					<div class="card-title">Date: <%= @event.date%></div>
					<div class="card-title">Annual: <%= @event.annual%></div>
					<div class="card-title">Notes: <%= @event.notes[0..60] %>...</div>
				</div>
				
				<% if @event.user == current_user %>
					<div class="card-action">
						<%= link_to 'Edit', edit_event_path(@event), class: "waves-effect orange btn"%>
						<%= link_to "Back", user_event_path(current_user.id), class: "waves-effect orange btn"%>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
