<div class="userevents">
	<h2 class="header center orange-text">Events</h2>

	<% if User.find(params[:id]) == current_user %>
		<%= link_to 'New Event', new_event_path, class: "waves-effect orange btn", id: "newevent-btn" %>
	<% end %>

	<br>

	<div class="row">
		<% @events.each do |event| %>
			<div class="col s12 m4">
				<div class="card">
					<div class="card-content center">
					    <span class="card-title orange-text"><%= event.title%></span>
						<p>Created on: <%= event.created_at.strftime("%m/%d/%Y %I:%M%p") %></p>
						<p class="notes">Notes: <%= truncate(event.notes, length:20) %></p>
						<p><%= link_to '[Read More]', event_path(event.id)%></p>
					</div>
					<% if event.user == current_user%>
						<div class="card-action center">
							<%= link_to "Edit", edit_event_path(event), class: "waves-effect orange btn"%>
							<%= link_to "Delete", event, method: :delete, data: { confirm: 'Are you sure?'}, class: "waves-effect red btn" %>
						</div>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>

	<% if User.find(params[:id]) == current_user %>
		<%= link_to 'New Event', new_event_path, class: "waves-effect orange btn" %>
	<% end %>
</div>
		